{% extends 'base.html.twig' %}

{% block title %}Hello SurveyController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        {{ form_start(form) }}

        {{ form_row(form.survey.title) }}
        {{ form_row(form.survey.status) }}

        <ul>
            <li>
                {{ form_row(form.text) }}
                {{ form_row(form.type) }}
                {{ form_row(form.required) }}
            </li>

        </ul>

        {{ form_row(form.survey.save) }}
        {{ form_end(form) }}



        {% if errors is defined %}
            <h3>Исправьте ошибки:</h3>
            <ul>
                {% for error in errors %}
                    <li>{{ error.message }}</li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>


{% endblock %}

